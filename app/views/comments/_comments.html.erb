<div>
  <% commentable.comments.each do |comment| %>
    <div>
      <%= comment.comment %> | <%= t(comment.created_at) %> | <%= t(comment.user.name.present? ? comment.user.name : comment.user.email)  %> |
        <%= link_to t('views.common.destroy'), [commentable, comment],
            method: :delete, data: { confirm: t('views.common.delete_confirm') } %>
    </div>
  <% end %>
</div>
